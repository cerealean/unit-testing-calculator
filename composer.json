    "description"       : "A unit testing example using a calculator",
    "license"           : "MIT",
    "minimum-stability" : "dev",
    "authors"           : [
        {
            "name"     : "Michael Crawford",
            "homepage" : "https://github.com/cerealean",
            "email"    : "cerealean@me.com",
